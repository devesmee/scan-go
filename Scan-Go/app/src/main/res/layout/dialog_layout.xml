<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Product was added!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/dialog_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="The product was successfully added to your cart."
        app:layout_constraintStart_toStartOf="@+id/dialog_title"
        app:layout_constraintEnd_toEndOf="@id/dialog_ok_button"
        app:layout_constraintTop_toBottomOf="@+id/dialog_title"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"/>

    <Button
        android:id="@+id/dialog_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:background="@android:color/transparent"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_text"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/dialog_yes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yes"
        android:background="@android:color/transparent"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/dialog_ok_button"
        app:layout_constraintTop_toTopOf="@+id/dialog_ok_button"/>

    <Button
        android:id="@+id/dialog_no_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:background="@android:color/transparent"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/dialog_yes_button"
        app:layout_constraintTop_toTopOf="@+id/dialog_ok_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>