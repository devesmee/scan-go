<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/listProductName"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="product"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/listProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="1.00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/listProductAdd"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:src="@drawable/ic_add"
        android:background="@drawable/round_button"
        app:layout_constraintEnd_toStartOf="@id/listProductAmount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/listProductAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="1"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/listProductRemove"
        app:layout_constraintTop_toTopOf="@id/listProductRemove"
        app:layout_constraintBottom_toBottomOf="@id/listProductRemove"
        android:layout_marginEnd="10dp"/>

    <ImageButton
        android:id="@+id/listProductRemove"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:src="@drawable/ic_minus"
        android:background="@drawable/round_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>